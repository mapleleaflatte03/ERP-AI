# ERPX AI Accounting - Example Environment Variables
# ==================================================
# Copy this file to .env and fill in the secrets
# 
# Part of PR-0: Baseline Freeze + Golden Tests

# ==========================================================================
# LLM Configuration - DO Agent ONLY (qwen3-32b)
# ==========================================================================
LLM_PROVIDER=do_agent
DO_AGENT_URL=https://your-agent-id.agents.do-ai.run
DO_AGENT_KEY=<your-do-agent-key>
DO_AGENT_MODEL=qwen3-32b
DISABLE_LOCAL_LLM=1

# ==========================================================================
# Telegram Bot (optional)
# ==========================================================================
TELEGRAM_BOT_TOKEN=<your-telegram-bot-token>

# ==========================================================================
# Database
# ==========================================================================
DATABASE_URL=postgresql://erpx:erpx_secret@postgres:5432/erpx

# ==========================================================================
# Storage (MinIO)
# ==========================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=<your-minio-access-key>
MINIO_SECRET_KEY=<your-minio-secret-key>
MINIO_BUCKET=erpx-documents

# ==========================================================================
# Vector Store (Qdrant)
# ==========================================================================
QDRANT_URL=http://qdrant:6333

# ==========================================================================
# Cache (Redis)
# ==========================================================================
REDIS_URL=redis://redis:6379/0

# ==========================================================================
# Workflow Engine (Temporal)
# ==========================================================================
TEMPORAL_ADDRESS=temporal:7233

# ==========================================================================
# Policy Engine (OPA)
# ==========================================================================
OPA_URL=http://opa:8181

# ==========================================================================
# Observability (OpenTelemetry)
# ==========================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
OTEL_SERVICE_NAME=erpx-api

# ==========================================================================
# Business Rules
# ==========================================================================
MIN_CONFIDENCE=0.85
HUMAN_REVIEW_THRESHOLD=0.75
MAX_FILE_SIZE_MB=50

# ==========================================================================
# Environment
# ==========================================================================
ENV=development
